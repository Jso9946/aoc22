# include <iostream>
# include <string>
# include <fstream>

using namespace std;

int main () {
    ifstream data("input.txt");
    string line;
    int score, sum = 0;
  
    while (getline(data, line)) {
        if (line == "A X") {
            score = 4;
               sum += score;
        } else if (line == "A Y") {
            score = 8;
               sum += score;
        } else if (line == "A Z") {
            score = 3;
               sum += score;
        }

        else if (line == "B X") {
            score = 1;
               sum += score;
        } else if (line == "B Y") {
            score = 5;
               sum += score;
        } else if (line == "B Z") {
            score = 9;
              sum += score;
        }

        else if (line == "C X") {
            score = 7;
               sum += score;
        } else if (line == "C Y") {
            score = 2;
       sum += score;
        } else if (line == "C Z") {
            score = 6;
              sum += score;
        }
    }

    cout << sum;
  
return 0;
}
